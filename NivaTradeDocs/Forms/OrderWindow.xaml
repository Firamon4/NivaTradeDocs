<Window x:Class="NivaTradeDocs.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Нове Замовлення Постачальнику" Height="600" Width="1100" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="1. Оберіть Постачальника" FontWeight="Bold" Margin="0,0,0,5"/>

            <ListBox Name="listCounterparties" Grid.Row="1" DisplayMemberPath="Name" 
                     SelectionChanged="ListCounterparties_SelectionChanged" FontSize="14"/>
        </Grid>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="2. Товари (Специфікація)" FontWeight="Bold" Margin="0,0,0,5"/>

            <DataGrid Name="gridSpecItems" Grid.Row="1" AutoGenerateColumns="False" 
                      IsReadOnly="True" SelectionMode="Single" MouseDoubleClick="GridSpecItems_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" Width="*"/>
                    <DataGridTextColumn Header="Ціна" Binding="{Binding Price}" Width="70"/>
                    <DataGridTextColumn Header="Од." Binding="{Binding Unit}" Width="50"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch"/>

        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="3. Ваше Замовлення" FontWeight="Bold" Margin="0,0,0,5"/>

            <DataGrid Name="gridOrder" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="К-сть" Binding="{Binding Quantity}" Width="60"/>
                    <DataGridTextColumn Header="Сума" Binding="{Binding Sum}" Width="70" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                <TextBlock Name="txtTotal" Text="ВСЬОГО: 0.00" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,0,10"/>
                <Button Content="💾 ЗБЕРЕГТИ ЗАМОВЛЕННЯ" Height="40" Background="#FF4CAF50" Foreground="White" FontSize="14" Click="Button_Save_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>