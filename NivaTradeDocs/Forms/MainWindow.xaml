<Window x:Class="NivaTradeDocs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Niva Trade Docs - Робоче місце" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#F3F4F6">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#ECF0F1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="15,0">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel Margin="10,20">
                <TextBlock Text="NIVA TRADE" Foreground="White" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,40"/>

                <Button Content="📦 Створити Замовлення" Style="{StaticResource MenuButtonStyle}" Click="BtnNewOrder_Click"/>
                <Button Content="📜 Історія Замовлень" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="📂 Товари та Залишки" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="⚙️ Налаштування" Style="{StaticResource MenuButtonStyle}"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                </Border.Effect>

                <Grid Margin="20,0">
                    <TextBlock Text="Головна сторінка" VerticalAlignment="Center" FontSize="20" FontWeight="SemiBold" Foreground="#333"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="Касир: Адміністратор" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Ellipse Width="35" Height="35" Fill="#BDC3C7"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,10,0" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.05"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Швидкий старт" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        <TextBlock Text="Тут можна вивести останні документи або статистику." TextWrapping="Wrap" Foreground="Gray"/>
                        <Button Content="Створити документ" Margin="0,20,0,0" Height="40" Background="#3498DB" Foreground="White" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="10,0,0,0" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.05"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Статус системи" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        <TextBlock Name="txtSyncStatusBig" Text="Очікування..." FontSize="14" Foreground="#27AE60"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Grid.Row="2" Background="#ECF0F1">
                <Grid Margin="10,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Статус синхронізації: " FontWeight="Bold" Foreground="#7F8C8D"/>
                        <TextBlock Name="txtFooterStatus" Text="Готово" Foreground="#2C3E50"/>
                    </StackPanel>

                    <TextBlock Text="Версія 1.0" HorizontalAlignment="Right" Foreground="#95A5A6"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>